{
    "name": "brendt/php-make-object",
    "description": "Easily make objects from raw data",
    "keywords": [
        "brendt",
        "php-make-object"
    ],
    "homepage": "https://github.com/brendt/php-make-object",
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Roose",
            "email": "brendt@stitcher.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Brendt\\PhpMakeObject\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brendt\\PhpMakeObject\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
