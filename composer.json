{
    "name": "brendt/php-make-object",
    "description": "Simple wrapper for symfony/serializer for the 90% use-case",
    "keywords": [
        "brendt",
        "php-make-object"
    ],
    "homepage": "https://github.com/brendt/php-make-object",
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Roose",
            "email": "brendt@stitcher.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpdocumentor/reflection-docblock": "^5.3",
        "symfony/property-access": "^6.0",
        "symfony/serializer": "^6.0",
        "symfony/validator": "^6.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "larapack/dd": "^1.1",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Brendt\\Make\\": "src"
        },
        "files" : [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Brendt\\Make\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
